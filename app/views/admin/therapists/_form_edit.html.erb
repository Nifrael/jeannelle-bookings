<%= simple_form_for therapist, url: admin_therapist_path(therapist), method: :patch do |f| %>
  <%= f.input :first_name, label: "Prénom" %>
  <%= f.input :last_name, label: "Nom" %>
  <% if therapist.role != "admin" %>
    <%= f.input :role, collection: Therapist.roles.keys, label: "Rôle" %>
  <% end %>
  <% if current_therapist == therapist %>
    <%= f.input :email, label: "Email" %>
    <%= f.input :password, label: "Mot de passe" %>
  <% end %>
  <%= f.button :submit, 'Modifier' %>
<% end %>
